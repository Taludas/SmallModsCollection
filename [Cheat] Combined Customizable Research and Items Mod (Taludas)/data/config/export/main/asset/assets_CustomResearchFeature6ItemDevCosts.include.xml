<ModOps>
    <ImyaTweaks Title="Custom Costs for Crafting Items in the Research Institute" Description="You can use the value entries to fine tune your experience." Icon="data/ui/2kimages/main/icons/icon_research_resource.png"/>
    <!-- # Research Point Costs for crafting Common Items -->
    <ModOp Type="replace" GUID="128475" Path="/Values/ProgressBalancing/Progress" ModOpID="ProgressFirstStepCommon">
        <Progress>
            <Item>
                <Value>500</Value>
            </Item>
        </Progress>
    </ModOp>
    <ImyaExpose Path="self::Progress/Item/Value" ModOpID="ProgressFirstStepCommon" ExposeID="Research Point Cost to craft the first Common Item"></ImyaExpose>

    <ModOp Type="replace" GUID="128475" Path="/Values/ProgressBalancing/PostProgress" ModOpID="ProgressFollowingStepsCommon">
        <PostProgress>
            <ThresholdInterval>1</ThresholdInterval>
            <ValueIncrease>500</ValueIncrease>
        </PostProgress>
    </ModOp>
    <ImyaExpose Path="self::PostProgress/ValueIncrease" ModOpID="ProgressFollowingStepsCommon" ExposeID="Research Point Cost Increase to craft each following Common Item"></ImyaExpose>

    <ModOp Type="add" GUID="128475" Path="/Values/ProgressBalancing" ModOpID="ProgressLimitCommon">
        <AbsoluteLimit>250000</AbsoluteLimit>
    </ModOp>
    <ImyaExpose Path="self::AbsoluteLimit" ModOpID="ProgressLimitCommon" ExposeID="Research Point Limit for crafting Common Items" Description="Sets the Research Points Cost for the first and each following craft of a common item as well as the overall cost threshold."></ImyaExpose>


