  <!-- Trigger to convert all mine slots to iron -->
  <ModOp Type="addNextSibling" GUID="130248">
    <Asset>
      <Template>Trigger</Template>
      <Values>
        <Standard>
          <GUID>1999002315</GUID>
          <Name>Trigger: Change Coal slots to Iron</Name>
        </Standard>
        <Locked />
        <Trigger>
          <TriggerCondition>
            <IsBaseAutoCreateAsset>1</IsBaseAutoCreateAsset>
            <Values>
              <Condition />
              <ConditionAlwaysTrue />
            </Values>
          </TriggerCondition>
          <TriggerActions>
            <Item>
              <TriggerAction>
                <Template>ActionSetObjectGUID</Template>
                <Values>
                  <Action />
                  <ActionSetObjectGUID>
                    <NewGUID>1010501</NewGUID>
                  </ActionSetObjectGUID>
                  <ObjectFilter>
                    <ObjectGUID>1010500</ObjectGUID>
                  </ObjectFilter>
                </Values>
              </TriggerAction>
            </Item>
            <Item>
              <TriggerAction>
                <Template>ActionResetTrigger</Template>
                <Values>
                  <Action />
                  <ActionResetTrigger />
                </Values>
              </TriggerAction>
            </Item>
          </TriggerActions>
        </Trigger>
        <TriggerSetup>
          <AutoRegisterTrigger>1</AutoRegisterTrigger>
          <UsedBySecondParties>0</UsedBySecondParties>
        </TriggerSetup>
      </Values>
    </Asset>
  </ModOp>

